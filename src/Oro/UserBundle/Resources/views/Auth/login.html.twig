{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/orouser/css/login.css') }}"/>
{% endblock %}

{% block body %}
    <form id="login_form" action="{{ path('login_check') }}" method="post" role="form" class="form-horizontal">
        <h1>Login</h1>
        {% if error %}
            <div class=" form-group has-error">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <label class="control-label" for="inputError1">{{ error.message }}</label>
                </div>
            </div>
        {% endif %}

        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">Username</label>
            <div class="col-sm-10">
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username"/>
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" id="password" name="_password" class="form-control"/>
            </div>
        </div>

        <input type="hidden" name="_target_path" value="/" />

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>
    </form>
{% endblock %}