{% extends '::layout.html.twig' %}

{% block content -%}
    <h1>{{ "oro.user.edit_title"|trans({'name': entity.name}) }}</h1>

    {% if(is_granted('VIEW_LIST', entity)) %}
        <p>
            <a href="{{ path('user') }}">&laquo; {{ "oro.user.users_back"|trans }}</a>
        </p>
    {% endif %}

    <form action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }} role="form" class="form">
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.username) }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username) }}
        </div>

        <div class="form-group">
            {{ form_label(form.fullname) }}
            {{ form_errors(form.fullname) }}
            {{ form_widget(form.fullname) }}
        </div>

        <div class="form-group">
            {{ form_label(form.file) }}
            {{ form_errors(form.file) }}
            {{ form_widget(form.file) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword) }}
            {{ form_errors(form.plainPassword) }}
            {{ form_widget(form.plainPassword) }}
        </div>

        {{ form_rest(form) }}
        <div>
            <button type="submit" class="btn btn-primary">{{ "oro.user.update"|trans }}</button>
            <a href="{{ path('user_show', { 'id': entity.id }) }}">{{ "oro.user.cancel"|trans }}</a>
        </div>
    </form>
</ul>
{% endblock %}
