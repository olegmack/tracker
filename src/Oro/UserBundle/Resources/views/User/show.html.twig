{% extends '::layout.html.twig' %}

{% block content %}
    <h1>User
        <div class="pull-right">
            <a class="btn btn-primary" role="button" href="{{ path('user_edit', { 'id': entity.id }) }}">Edit</a>
        </div>
    </h1>

    <p>
        <a href="{{ path('user') }}">&laquo; Back to the Users list</a>
    </p>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Details
                    <div class="pull-right">
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-1">
                            <img class='image-round-100' src="
                                {% if entity.avatar is not empty %}
                                    {{ '/' ~ entity.getWebPath() }}
                                {% else %}
                                    {{ '/' ~ entity.getUploadDir() ~ '/default/default100.png' }}
                                {% endif %}
                            "/>
                        </div>
                        <div class="col-sm-8">
                            <dl class="dl-horizontal">
                                <dt>Email</dt>
                                <dd>{{ entity.email }}</dd>
                                <dt>Username</dt>
                                <dd>{{ entity.username }}</dd>
                                <dt>Fullname</dt>
                                <dd>{{ entity.fullname }}</dd>
                                <dt>Roles</dt>
                                <dd>
                                {% for role in entity.roles %}
                                    {{ role.name}}<br/>
                                {% endfor %}
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">Activity stream</div>
                <div class="panel-body">
                    <b>#TODO</b>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">Open Issues</div>
                <div class="panel-body">
                    {% if issues|length > 0 %}
                        <table class="table table-striped">
                            <col width="50" />
                            <col />
                            {% for issue in issues %}
                                <tr>
                                    <td><a href="{{ path('issue_show', { 'id': issue.id }) }}">{{  issue.code }}</a></td>
                                    <td>{{ issue.summary|truncate(200, true) }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% else %}
                        There are no opened issues.
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
