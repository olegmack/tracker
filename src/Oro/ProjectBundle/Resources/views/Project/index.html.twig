{% extends '::layout.html.twig' %}

{% block content -%}
    <h1>Projects</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Summary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{  entity.code }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.summary|truncate(200, true) }}</td>
                <td>
                    {% if(is_granted('MODIFY', entity)) %}
                        <a class="btn btn-primary" role="button" href="{{ path('project_edit', { 'id': entity.id }) }}">Edit</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if(is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER')) %}
    <a class="btn btn-primary" href="{{ path('project_new') }}">
        + Create New Project
    </a>
    {% endif %}

    {% endblock %}
