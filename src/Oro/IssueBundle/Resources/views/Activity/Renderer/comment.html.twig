<div class="well well-sm activity">
    <div class="header">
        <span class="user">
            <a href="{{ path('user_show', { 'id': activity.user.id }) }}">{{ activity.user.fullname}}</a>
        </span>
        {{ "oro.activity.commented_action"|trans }}
        <a href="{{ path('issue_show', { 'id': activity.issue.id }) }}">{{ activity.issue.code }}</a>

        <div class="pull-right date">
            <span class="field">{{ activity.createdAt|date('F j, Y H:i', app.user.timezone) }}</span>
        </div>
    </div>

    <div class="details">
        {{ activity.details }}
    </div>
</div>