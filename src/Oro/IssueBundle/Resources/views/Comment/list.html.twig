<div class="panel panel-info">
    <div class="panel-heading">Comments</div>
    <div class="panel-body">

    {% for comment in comments %}
    <div class="comment" id="comment-{{ comment.id }}">
        <div class="header text-muted">
            <a href="{{ path('user_show', { 'id': comment.author.id }) }}">{{ comment.author.fullname }}</a>
            - <span class="date">{{ comment.createdAt|date('F j, Y H:i') }}</span>

            <div class="pull-right">
                <a href="{{ path('comment_edit', { 'id': comment.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            </div>
        </div>
        <div class="body">{{ comment.body }}</div>
    </div>
{% else %}
    <p>There are no comments for this issue</p>
{% endfor %}
    </div>
</div>

