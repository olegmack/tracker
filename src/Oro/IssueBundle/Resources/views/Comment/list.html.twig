<div class="panel panel-info">
    <div class="panel-heading">{{ "oro.comment.comments_heading"|trans }}</div>
    <div class="panel-body">

    {% for comment in comments %}
    <div class="comment" id="comment-{{ comment.id }}">
        <div class="header text-muted">
            <a href="{{ path('user_show', { 'id': comment.author.id }) }}">{{ comment.author.fullname }}</a>
            - <span class="date">{{ comment.createdAt|date('F j, Y H:i', app.user.timezone) }}</span>

            {% if (is_granted('MODIFY', comment)) %}
            <div class="pull-right">
                <a href="{{ path('comment_update', { 'id': comment.id }) }}"
                   title="{{ "oro.comment.edit_hint"|trans }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="{{ path('comment_delete', { 'id': comment.id }) }}"
                   title="{{ "oro.comment.delete_hint"|trans }}">
                   <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
            </div>
            {% endif %}
        </div>
        <div class="body">{{ comment.body }}</div>
    </div>
{% else %}
    <p>{{ "oro.comment.no_comments"|trans }}</p>
{% endfor %}
    </div>
</div>

