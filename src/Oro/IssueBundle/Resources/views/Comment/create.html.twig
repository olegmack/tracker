<div class="panel panel-info">
    <div class="panel-heading">{{ "oro.comment.add_heading"|trans }}</div>
    <div class="panel-body">
        <form action="{{ path('comment_create', {'issueId' : issue_id}) }}" method="post" {{ form_enctype(form) }} role="form" class="form">
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_errors(form.body) }}
                {{ form_widget(form.body) }}
            </div>

            <div>
                <button type="submit" class="btn btn-primary">{{ "oro.comment.add_button"|trans }}</button>
            </div>

            {{ form_rest(form) }}
        </form>
    </div>
</div>
